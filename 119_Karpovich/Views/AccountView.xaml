<UserControl x:Class="_119_Karpovich.Views.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_119_Karpovich.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <TextBlock 
            Text="{Binding StringBalance, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
            TextWrapping="WrapWithOverflow"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Margin="0 10"/>

        <Grid Grid.Column="2" Grid.RowSpan="2" VerticalAlignment="Top">

            <Button 
                Style="{StaticResource SmallButtonStyle}"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Margin="0"
                ToolTip="Редактирование или добавление персональных данных.">
                <Button.Content>
                    <TextBlock
                        Text="Профиль"
                        Margin="0 10 0 0"/>
                </Button.Content>
            </Button>

            <Button 
                Style="{StaticResource SmallButtonStyle}"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Grid.Row="1"
                Margin="0"
                Command="{Binding ExitAccountCommand}"
                ToolTip="Выход на страницу авторизации.">
                <Button.Content>
                    <TextBlock
                        Text="Выйти"
                        Margin="0 0 0 0"/>
                </Button.Content>
            </Button>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <Grid>
                    <TextBlock 
                        Text="Выберите услугу:" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        TextWrapping="WrapWithOverflow"
                        Margin="0 10"/>
                    
                    <ComboBox 
                        x:Name="SelectService"
                        ItemsSource="{Binding ListServices}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="Name"
                        SelectedValue="{Binding Path=SelectedService}"
                        Grid.Column="1" Margin="10" Padding="3"
                        MaxHeight="30"/>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>

                <Grid>
                    <TextBlock 
                        x:Name="FirstServiceBlock" 
                        Text="Номер карты получателя:" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        Grid.Column="0"
                        Margin="0"/>
                    
                    <TextBlock 
                        x:Name="SecondServiceBlock" 
                        Text="Номер карты вывода:" 
                        HorizontalAlignment="Left" 
                        Grid.Column="0"
                        Visibility="Hidden"/>
                    
                    <TextBlock 
                        x:Name="ThirdServiceBlock" 
                        Text="Номер карты списания:" 
                        HorizontalAlignment="Right" 
                        Grid.Column="0" 
                        Visibility="Hidden"/>
                    
                    <TextBox 
                        x:Name="CardNumber" 
                        Text="{Binding CardNumber}" 
                        Margin="10 5" 
                        Grid.Row="0" 
                        Grid.Column="1"
                        VerticalAlignment="Center"/>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>

                <Grid>
                    <TextBlock 
                        x:Name="LastBlock" 
                        Text="Сумма операции:" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        Grid.Column="0"
                        Margin="0 10"/>

                    <TextBox 
                        x:Name="OperationBalance" 
                        Text="{Binding OperationBalance}" 
                        Margin="10 5" 
                        Grid.Row="0" 
                        Grid.Column="1"/>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                </Grid>
                
                <Button 
                    x:Name="ConfirmButton" 
                    Content="Оплатить"
                    Command="{Binding ConfirmCommand}"
                    Margin="0 20"/>
            </StackPanel>
        </Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
    </Grid>
</UserControl>
